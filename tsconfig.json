{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"moduleResolution": "node",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"paths": {
			"@rockstar/handler": ["./handler"]
		}
	},
	"references": [
		{
			"path": "client"
		},
		{
			"path": "handler"
		}
	],
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
